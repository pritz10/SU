<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_forums"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:paddingBottom="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pritz.sikkimuniversity.Forums"
    tools:showIn="@layout/activity_forums">

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.87"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"
        android:stackFromBottom="true"
        android:textAlignment="gravity"
        android:transcriptMode="alwaysScroll"
        tools:ignore="InefficientWeight,ObsoleteLayoutParam" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ltitle"
        android:layout_marginTop="2dp"
        android:background="@drawable/frm"
        android:ems="10"
        android:hint="Type a message....."
        android:textColorHint="@color/colorPrimaryDark"
        android:inputType="textMultiLine"
        android:paddingBottom="15dp"
        android:paddingEnd="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        android:textColor="@color/colorPrimaryDark"
        tools:ignore="HardcodedText,ObsoleteLayoutParam" />

</LinearLayout>
